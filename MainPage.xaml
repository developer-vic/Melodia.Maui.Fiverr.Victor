<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#17142b"
             x:Class="MelodiaTherapy.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">

            <Grid ColumnDefinitions="*,*">
                <Image Grid.Column="0"
                       Source="back.png"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>
                <Image Grid.Column="1"
                       Source="menu.png"
                       VerticalOptions="Center"
                       HorizontalOptions="End"/>
            </Grid>

            <Grid ColumnDefinitions="auto,auto,auto,auto,auto"
                  HorizontalOptions="Center"
                  Margin="0,10">
                <Border Grid.Column="0"
                        WidthRequest="40"
                        HeightRequest="40"
                        BackgroundColor="#2a3949"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 50"
                        Stroke="#76cec5">
                    <Label Text="1"
                           FontFamily="OpenSansSemibold"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="24"
                           TextColor="#76cec5"/>
                </Border>
                <Border Grid.Column="1"
                        HeightRequest="2"
                        WidthRequest="40"
                        BackgroundColor="Transparent"
                        Stroke="#4b767c"
                        StrokeThickness="1"
                        StrokeDashArray="2"
                        StrokeDashOffset="1"/>
                <Border Grid.Column="2"
                        WidthRequest="40"
                        HeightRequest="40"
                        BackgroundColor="#232035"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 50"
                        Stroke="#4b767c">
                    <Label Text="2"
                           FontFamily="OpenSansSemibold"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="24"
                           TextColor="#76cec5"/>
                </Border>
                <Border Grid.Column="3"
                        HeightRequest="2"
                        WidthRequest="40"
                        BackgroundColor="Transparent"
                        Stroke="#4b767c"
                        StrokeThickness="1"
                        StrokeDashArray="2"
                        StrokeDashOffset="1"/>
                <Border Grid.Column="4"
                        WidthRequest="40"
                        HeightRequest="40"
                        BackgroundColor="#232035"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 50"
                        Stroke="#4b767c">
                    <Label Text="3"
                           FontFamily="OpenSansSemibold"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="24"
                           TextColor="#76cec5"/>
                </Border>
            </Grid>

            <Label Text="Choisis ta pathologie"
                   HorizontalOptions="Center"
                   FontSize="30"
                   FontFamily="OpenSansRegular"
                   TextColor="White"/>
            <Border HeightRequest="1.5"
                    WidthRequest="170"
                    HorizontalOptions="Center"
                    BackgroundColor="Transparent"
                    Stroke="#9f9fa3"
                    StrokeThickness="1"
                    StrokeDashArray="2"
                    StrokeDashOffset="1"/>

            <Grid Margin="0,30,10,0"
                  RowDefinitions="auto,auto,auto"
                  ColumnDefinitions="*,*"
                  RowSpacing="40"
                  ColumnSpacing="10">
                <Border Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="#2e2c3f"
                        Padding="10"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                    <Grid>
                        <VerticalStackLayout Spacing="5">
                            <Border StrokeShape="Ellipse"
                                    Stroke="#76cec5"
                                    StrokeThickness="4"
                                    HeightRequest="40"
                                    WidthRequest="40"/>
                            <Label Text="Pathologie 01"
                                   FontSize="12"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <Image Source="lock.png"
                               WidthRequest="15"
                               HeightRequest="17"
                               Aspect="Fill"
                               Margin="0,0,0,10"
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </Grid>
                </Border>
                <Border Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="#76cec5"
                        Padding="10"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                    <Grid>
                        <VerticalStackLayout Spacing="5">
                            <Border StrokeShape="Rectangle"
                                    Stroke="#2e2c3f"
                                    StrokeThickness="4"
                                    HeightRequest="40"
                                    WidthRequest="40"/>
                            <Label Text="Pathologie long text"
                                   FontSize="12"
                                   TextColor="#2e2c3f"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <Image Source="lock_black.png"
                               WidthRequest="15"
                               HeightRequest="17"
                               Aspect="Fill"
                               Margin="0,0,0,10"
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </Grid>
                </Border>
                <Border Grid.Row="1"
                        Grid.Column="0"
                        BackgroundColor="#2e2c3f"
                        Padding="10"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                    <Grid>
                        <VerticalStackLayout Spacing="5">
                            <Image Source="triangle.png"
                                   HeightRequest="40"
                                   WidthRequest="40"/>
                            <Label Text="Pathologie 01"
                                   FontSize="12"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <Image Source="lock.png"
                               WidthRequest="15"
                               HeightRequest="17"
                               Aspect="Fill"
                               Margin="0,0,0,10"
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </Grid>
                </Border>
                <Border Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="#2e2c3f"
                        Padding="10"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                    <Grid>
                        <VerticalStackLayout Spacing="5">
                            <Image Source="septangon.png"
                                   HeightRequest="40"
                                   WidthRequest="40"/>
                            <Label Text="Pathologie 01"
                                   FontSize="12"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <Image Source="lock.png"
                               WidthRequest="15"
                               HeightRequest="17"
                               Aspect="Fill"
                               Margin="0,0,0,10"
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </Grid>
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="0"
                        BackgroundColor="#2e2c3f"
                        Padding="10"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                    <Grid>
                        <VerticalStackLayout Spacing="5">
                            <Image Source="wave.png"
                                   HeightRequest="40"
                                   WidthRequest="80"/>
                            <Label Text="Pathologie 01"
                                   FontSize="12"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <Image Source="lock.png"
                               WidthRequest="15"
                               HeightRequest="17"
                               Aspect="Fill"
                               Margin="0,0,0,10"
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </Grid>
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="1"
                        BackgroundColor="#2e2c3f"
                        Padding="10"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                    <Grid>
                        <VerticalStackLayout Spacing="5">
                            <Image Source="polygon.png"
                                   HeightRequest="40"
                                   WidthRequest="40"/>
                            <Label Text="Pathologie 01"
                                   FontSize="12"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <Image Source="lock.png"
                               WidthRequest="15"
                               HeightRequest="17"
                               Aspect="Fill"
                               Margin="0,0,0,10"
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </Grid>
                </Border>
            </Grid>

            <Label Text="5 songs left"
                   TextColor="#d27a85"
                   FontSize="22"/>

            <Border BackgroundColor="#76cec5"
                    Padding="0,10"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 30">
                <Grid>
                    <Label Text="next"
                           FontSize="32"
                           HorizontalOptions="Center"/>
                    <Image Source="next.png"
                           WidthRequest="25"
                           Margin="0,0,30,0"
                           HorizontalOptions="End"/>
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
