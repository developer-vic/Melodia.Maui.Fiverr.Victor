<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MelodiaTherapy.Pages.PaywallPage"
             x:Name="mainPage"
             BackgroundColor="#17142b"
             Title="">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <!-- IsVisible="{Binding IsConnected}" -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackLayout Grid.Row="0"
                             HorizontalOptions="Center">
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="Melodia Therapy "
                               TextColor="White"
                               FontSize="23"
                               CharacterSpacing="1.5"/>
                        <Label Text="Premium"
                               TextColor="White"
                               FontSize="23"
                               CharacterSpacing="1.5"
                               BackgroundColor="#76cec5"/>
                    </HorizontalStackLayout>

                    <Label Text="Your gateway to well-being"
                           TextColor="White"
                           FontSize="19"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>

                    <Label Text="Say goodbye to stress, anxiety, chronic pain, and much more."
                           TextColor="White"
                           FontSize="16"
                           LineHeight="1.2"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,25,0,0"/>
                </StackLayout>

                <!-- Packages Collection -->
                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding DisplayPackages}"
                                Margin="0,30,0,0"
                                SelectionMode="None"
                                SelectedItem="{Binding SelectedPackage}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border Stroke="#76cec5"
                                        BackgroundColor="{Binding IsSelected, Converter={StaticResource SelectedBackgroundConverter}}"
                                        Padding="10,20"
                                        StrokeShape="RoundRectangle 10"
                                        Margin="0,0,0,20">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding mainPage.SelectPackageCommand}"
                                                              CommandParameter="{Binding}"/>
                                    </Border.GestureRecognizers>

                                    <StackLayout Spacing="10">
                                        <Label Text="{Binding Description}"
                                               TextColor="White"
                                               FontFamily="OpenSansSemibold"
                                               FontSize="22"
                                               FontAttributes="Bold"/>

                                        <HorizontalStackLayout>
                                            <Label Text="{Binding OldPriceFormatted}"
                                                   TextColor="White"
                                                   TextDecorations="Strikethrough"
                                                   FontSize="25"
                                                   FontAttributes="Bold"
                                                   IsVisible="{Binding HasDiscount}"/>

                                            <Label Text="{Binding PriceFormatted}"
                                                   TextColor="White"
                                                   FontFamily="OpenSansSemibold"
                                                   FontSize="30"
                                                   FontAttributes="Bold"
                                                   Margin="15,0"/>

                                            <Border BackgroundColor="#FFEA8383"
                                                    Stroke="Transparent"
                                                    StrokeShape="RoundRectangle 8"
                                                    Padding="2,0"
                                                    IsVisible="{Binding IsPopular}">
                                                <Label Text="{Binding DiscountText}"
                                                       FontSize="16"
                                                       VerticalOptions="Center"
                                                       TextColor="White"/>
                                            </Border>
                                        </HorizontalStackLayout>

                                        <Label Text="Full access"
                                               TextColor="White"
                                               FontSize="16"/>
                                    </StackLayout>
                                </Border>
                                <!-- Package Label for "Popular" only on the last item -->
                                <Border HorizontalOptions="Center"
                                        VerticalOptions="Start"
                                        Stroke="Transparent"
                                        BackgroundColor="#76cec5"
                                        Margin="0,-10,0,0"
                                        Padding="5,0"
                                        IsVisible="{Binding IsPopular}">
                                    <Label Text="Popular"
                                           TextColor="White"
                                           FontSize="20"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Features List -->
                <StackLayout Grid.Row="2"
                             HorizontalOptions="Center"
                             Margin="20,5,0,0">
                    <CollectionView ItemsSource="{Binding Features}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout HorizontalOptions="Center">
                                    <Image Source="check_circle_outline.png"
                                           HeightRequest="28"
                                           WidthRequest="28"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>
                                    <Label Text="{Binding}"
                                           TextColor="White"
                                           Margin="5,0,0,0"
                                           FontSize="14"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- Promo Code Section -->
                <StackLayout Grid.Row="3"
                             Margin="0,15,0,0">
                    <Label Text="Do you have a promo code?"
                           TextColor="White"
                           FontSize="16"
                           HorizontalOptions="Center"/>

                    <Grid HorizontalOptions="Fill"
                          ColumnDefinitions="*,auto"
                          Margin="20,10">
                        <Border Grid.Column="0"
                                StrokeShape="RoundRectangle 10,10,10,10"
                                Stroke="#76cec5"
                                Padding="10,0"
                                HeightRequest="50">
                            <Entry Text="{Binding PromoCode}"
                                   TextColor="White"
                                   PlaceholderColor="White"
                                   Placeholder="PROMO CODE"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Button Grid.Column="1"
                                Text="Apply"
                                Command="{Binding ApplyPromoCodeCommand}"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="20"
                                BackgroundColor="#76cec5"
                                CornerRadius="25"
                                Margin="10,0,0,0"
                                Padding="20,10"/>
                    </Grid>
                </StackLayout>

                <!-- Terms and Conditions -->
                <HorizontalStackLayout Grid.Row="4"
                                       HorizontalOptions="Center"
                                       Margin="0,15,0,0">
                    <Label Text="Terms of use"
                           TextColor="#76cec5"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenTermsCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text=" - "
                           TextColor="#76cec5"/>

                    <Label Text="Privacy policy"
                           TextColor="#76cec5"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenPrivacyCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Grid>

            <!-- No Internet Connection View -->
            <!-- <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 IsVisible="{Binding IsNotConnected}">
                <Image Source="wifi_off.png"
                       HeightRequest="50"
                       WidthRequest="50"
                       HorizontalOptions="Center"/>

                <Label Text="{Binding LanguageResources[Pas de connexion internet]}"
                       TextColor="White"
                       Margin="0,10,0,0"
                       HorizontalOptions="Center"/>

                <Button Text="{Binding LanguageResources[RÃ©essayer]}"
                        Command="{Binding RetryConnectionCommand}"
                        TextColor="White"
                        FontAttributes="Bold"
                        BackgroundColor="#76cec5"
                        CornerRadius="30"
                        Margin="0,10,0,0"
                        Padding="10"/>
            </VerticalStackLayout> -->

            <!-- Loading Overlay -->
            <!-- <Grid IsVisible="{Binding IsLoading}"
                  BackgroundColor="#80000000"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
                <ActivityIndicator IsRunning="True"
                                   Color="#76cec5"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
            </Grid> -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>