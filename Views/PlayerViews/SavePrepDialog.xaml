<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MelodiaTherapy.Views.PlayerViews.SavePrepDialog">
    <VerticalStackLayout Padding="20">
        <Label Text="Enter Title" FontAttributes="Bold" FontSize="18" />
        <Entry x:Name="TitleEntry" Placeholder="Title" />
        <Label x:Name="ErrorLabel" TextColor="Red" FontSize="12" IsVisible="False" />
        
        <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
            <Button Text="Cancel" Clicked="OnCancelClicked" />
            <Button Text="Save" Clicked="OnSaveClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
