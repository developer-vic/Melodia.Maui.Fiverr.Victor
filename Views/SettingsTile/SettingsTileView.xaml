<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MelodiaTherapy.Views.SettingsTile"
             x:Name="this">

    <ContentView.Content>
        <Border BackgroundColor="Transparent"
                Padding="0"
                Stroke="Transparent">

            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Command, Source={x:Reference this}}"
                                      CommandParameter="{Binding CommandParameter, Source={x:Reference this}}"/>
            </Border.GestureRecognizers>

            <Grid Padding="16,12"
                  ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Image Grid.Column="0"
                       Source="{Binding IconGlyph, Source={x:Reference this}}"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       WidthRequest="{OnIdiom Phone=35, Tablet=48, Default=35}"/>

                <!-- Text Content -->
                <StackLayout Grid.Column="1"
                             Spacing="4"
                             VerticalOptions="Center">
                    <Label Text="{Binding Title, Source={x:Reference this}}"
                           TextColor="White"
                           FontSize="{OnIdiom Phone=16, Tablet=24, Default=16}"/>

                    <Label Text="{Binding Description, Source={x:Reference this}}"
                           TextColor="White"
                           FontSize="{OnIdiom Phone=14, Tablet=20, Default=14}"/>
                </StackLayout>

                <!-- Chevron -->
                <!-- <Label Grid.Column="2" 
                       FontFamily="FontAwesome"
                       Text="&#xf054;"
                       TextColor="Grey"
                       FontSize="{OnIdiom Phone=16, Tablet=24, Default=16}"
                       VerticalOptions="Center" /> -->
            </Grid>
        </Border>
    </ContentView.Content>
</ContentView>