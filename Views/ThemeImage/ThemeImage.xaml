<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MelodiaTherapy.Views.ThemeImage"
             IsVisible="{Binding IsPlayerPageVisible}">
    <Grid>
        <Image x:Name="ThemeBackgroundImage"
               Aspect="AspectFill"
               Opacity="0.7"
               IsVisible="False"
               WidthRequest="{OnPlatform Android={Binding ScreenWidth}, Default=1000}"
               HeightRequest="{OnPlatform Android={Binding ScreenHeight}, Default=2000}"/>
    </Grid>
</ContentView>